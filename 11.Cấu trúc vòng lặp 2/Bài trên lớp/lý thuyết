//for/in lặp qua key
var languages = [ 
    'Javascript',
    'PHP',       
    'Ruby',
 ];
  for (var key in languages) {
 console.log(key);   // in ra  0,1,2 
  }
  console.log(languages[key]);   // in ra 3 java,php,ruby
  // or in ra chuỗi 
  var languages = 'Javascript'
  for (var key in languages) {
    console.log(key); // có 10 kí tự số 0 - 9
    console.log(languages[key]); // in ra nhiều chữ cái 
  }
// for/of lặp qua value lấy ra chữ cái một chuỗi or mãng
var languages = [ //cách đơn giản lấy ra từng p tử của mảng
  'Javascript', //đây là ứng dụng với mảng
  'PHP',       
  'Ruby',
];
for (var value of languages) {
  console.log(value);
}
 //or lấy ra một chuỗi  chữ javascript
 var languages = 'Javascript';
for (var value of languages) {
  console.log(value);
}
// or lấy ra từ Object của key và value
