};
for (var value of Object.value(myInfo)) {
  console.log(value);
}
// while  loop lặp đk  true
var i = 0;  = 1 // chú ý đủ đk ko sẽ bị treo trình duyệt NHẤT LÀ I++
while (i < 1000) { //  i<= 1000
  i++;             // i++ sẽ chuyễn xuống dưới log
console.log(i);
}
// có thể lặp qua array
var myArray = [
  'Javascript' /// LẤY ĐC HAI PHẦN TỬ 
  'PHP'
];
var i = 0;
while (i < myArray.length) {
  console.log(myArray[i]);
  i++;
}
//do/while lặp ít nhất 1 lần sau đó lặp đk true
var i= 0;
var isSuccess = false;

do {
   i++;
  console.log('Nạp thẻ lần ' + i);
  if (false) {
    isSuccess = true;
  }

}while (!isSuccess && i <=3);

// break & continue in loop  và 
// break thoát khỏi vòng lặp
for ( var i = 0; i < 10; i++) {
  console.log(i);
  if (i>= 5) {
    break;
  }
}
// continue;bỏ qua một vài vòng lặp

for ( var i = 0; i < 10; i++) {
if (i%2 !== 0) {
  continue;
}
  console.log(i);
}
//vòng lặp lồng nhau nested loop
var myArray = [
  [1,2],
  [3,4],
  [5,6]
];
for (var i = 0; i < myArray.length; i++) {
  for (var j = 0; j < myArray[i].length; j++ ) {
    console.log((myArray[i [j]]);
}
}
//ví dụ thêm
//in từ 100 về 1
for (var i = 100; i > 0; i--) {
  console.log(i);
}
//in ra giá trị 0,5,10,15 tăng lên 5
for ( var i = 0; i <=5) {
  console.log(i);
}